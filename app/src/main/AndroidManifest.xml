<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.icov.app">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/CustomTheme"
        android:usesCleartextTraffic="true"
        tools:targetApi="m">
        <activity android:name="com.icov.app.activities.UpdateUserInfoActivity"
            android:theme="@style/CustomTheme.NoActionBar"/>
        <activity
            android:name="com.icov.app.activities.PrivacyOrTermsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/CustomTheme.NoActionBar" />
        <activity
            android:name="com.icov.app.activities.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.icov.app.activities.RegisterActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Register" />
        <activity
            android:name="com.icov.app.activities.ResetPasswordActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.icov.app.activities.MainActivity"
            android:theme="@style/CustomTheme.NoActionBar" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>